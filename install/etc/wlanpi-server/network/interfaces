source /etc/network/interfaces.d/*

auto lo
iface lo inet loopback

# Wired Ethernet
allow-hotplug eth0
iface eth0 inet static
address 172.16.42.1
netmask 255.255.255.0
dns-nameservers 208.67.222.222 1.1.1.1

# Wireless adapter #1
allow-hotplug wlan0
iface wlan0 inet static
address 172.16.43.1
netmask 255.255.255.0
dns-nameservers 208.67.222.222 1.1.1.1
hostapd /etc/hostapd/hostapd.conf
